CC = gcc
CFLAGS = -Wall -IInclude `sdl2-config --cflags`
LIBS = `sdl2-config --libs` -lSDL2_image -lSDL2_ttf -lSDL2_mixer

SRC = Source/main.c \
      Source/menu.c  # Assure-toi que menu.c est ici

EXEC = exec/jeu

all: $(EXEC)

$(EXEC): $(SRC)
	@mkdir -p exec
	$(CC) $(CFLAGS) -o $@ $^ $(LIBS)
	@echo "âœ… Compilation rÃ©ussie : $(EXEC)"

compile: clean all

jeu: compile
	@echo "ðŸŽ® Lancement du jeu..."
	./$(EXEC)

clean:
	@echo "ðŸ§¹ Nettoyage..."
	rm -f $(EXEC)
